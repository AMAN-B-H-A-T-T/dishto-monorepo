{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@org/source"],
    "baseUrl": ".",
    "paths": {
      "@lib/ui": ["libs/ui/src/index.ts"],
      "@lib/inventory": ["libs/inventory/src/index.ts"],
      "@lib/api-client": ["libs/api-client/src/index.ts"]
    },
    "noImplicitAny": false
  }
}
